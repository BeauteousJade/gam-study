<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/kind_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="@string/kind_name"
        android:textColor="@color/color_item_dark"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/kind_name_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bg_editext"
        android:hint="@string/hint_input_kind_name"
        android:textColor="@color/color_item_dark"
        android:textColorHint="@color/color_hint"
        app:layout_constraintBottom_toBottomOf="@id/kind_name"
        app:layout_constraintLeft_toRightOf="@id/kind_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/kind_name" />
</android.support.constraint.ConstraintLayout>
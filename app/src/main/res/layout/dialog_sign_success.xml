<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <ImageView
        android:id="@+id/blessing"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/icon_blessing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/blessing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/sign_success"
        android:textColor="@color/color_006"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintLeft_toLeftOf="@id/blessing"
        app:layout_constraintRight_toRightOf="@id/blessing"
        app:layout_constraintTop_toBottomOf="@id/blessing" />

    <Button
        android:id="@+id/sure"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button"
        android:text="@string/sure"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/blessing_text"
        app:layout_constraintRight_toRightOf="@id/blessing_text"
        app:layout_constraintTop_toBottomOf="@id/blessing_text" />
</androidx.constraintlayout.widget.ConstraintLayout>
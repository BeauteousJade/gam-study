<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="3dp" />
            <gradient android:angle="315" android:endColor="@color/color_end_blue" android:startColor="@color/color_start_blue" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="3dp" />
            <gradient android:angle="315" android:endColor="@color/end_color_50" android:startColor="@color/color_start_blue_50" />
        </shape>
    </item>
</selector>